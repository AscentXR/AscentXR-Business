# ======================
# Ascent XR Backend Configuration
# ======================
# Copy this file to .env and fill in real values

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=change-this-to-a-random-64-char-string
# Generate hashes: node -e "const bcrypt=require('bcrypt'); bcrypt.hash('YOUR_PASSWORD', 12).then(h => console.log(h))"
ADMIN_JIM_HASH=$2b$12$your_bcrypt_hash_here
ADMIN_NICK_HASH=$2b$12$your_bcrypt_hash_here
# For development only - plain text fallback password (remove in production)
DEV_PASSWORD=

# Database (PostgreSQL)
DATABASE_URL=postgresql://ascentxr_user:your_password@localhost:5432/ascentxr

# Redis Cache
REDIS_URL=redis://localhost:6379

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=http://localhost:3000/api/linkedin/callback

# CRM API (external)
CRM_API_URL=https://web-production-f0ae1.up.railway.app
CRM_API_KEY=your_crm_api_key

# Session
SESSION_SECRET=your_session_secret_key_here

# File Storage
UPLOAD_DIR=./uploads
DOCUMENTS_DIR=./documents
EXPORT_DIR=./exports

# FTP Deployment (use env vars, never hardcode)
FTP_HOST=your_ftp_host
FTP_USER=your_ftp_user
FTP_PASS=your_ftp_password
